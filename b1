package edu.princeton.cs.algs4;

public class Bi{
    public static int Bis(int[] a, int n ){
        int left = 0;
        int right = a.length-1;
        while (left < right){
            int mid = left + (right - left)/2;
            if(a[mid] == n){
                return mid;
            }
            else if(a[mid] < n){
                left = mid+1;
            } 
            else{
                right = mid-1;
            }
        }
        return -1;
    }
}
